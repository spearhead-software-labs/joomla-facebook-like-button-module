<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="1.6.0" method="upgrade" client="site">
	<name>Spearhead Facebook Like Button.</name>
	<creationDate>Jan 7 2011</creationDate>
	<author>Thomas George</author>
	<version>1.0</version>
	<licence>GNU/GPL http://www.gnu.org/licenses/gpl.html</licence>
	<description>Facebook like button by spearhead softwares.</description>
	<files>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename module="mod_spearheadfacebooklike">mod_spearheadfacebooklike.php</filename>
		<filename>mod_spearheadfacebooklike.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.mod_spearheadfacebooklike.sys.ini</language>
		<language tag="en-GB">languages/en-GB.mod_spearheadfacebooklike.ini</language>
		<language tag="it-IT">languages/it-IT.mod_spearheadfacebooklike.sys.ini</language>
		<language tag="it-IT">languages/it-IT.mod_spearheadfacebooklike.ini</language>
		<language tag="de-DE">languages/de-DE.mod_spearheadfacebooklike.sys.ini</language>
		<language tag="de-DE">languages/de-DE.mod_spearheadfacebooklike.ini</language>
		<language tag="es-ES">languages/es-ES.mod_spearheadfacebooklike.sys.ini</language>
		<language tag="es-ES">languages/es-ES.mod_spearheadfacebooklike.ini</language>
		<language tag="hu-HU">languages/hu-HU.mod_spearheadfacebooklike.sys.ini</language>
		<language tag="hu-HU">languages/hu-HU.mod_spearheadfacebooklike.ini</language>
	</languages>	
	<config>
		<fields name="params">
			<fieldset name="basic" label="Module Parameters" description="Configure Module">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX"/>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="auto_discovery" type="list" default="yes" label="Url Auto Discovery" description="The module will automatically find url's to like for each pages.">
					<option value="yes">yes</option>
					<option value="no">no</option>
				</field>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="like_url" type="text" default="" label="Url To Like(not needed when using url auto discovery mode or FBML mode)" description="Full Url eg:http://www.spearheadsoftwares.com/contactus.php. This makes the module to work only for one url and is not recommended. Use Url Auto Discovery whenever possible."/>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="layout_style" type="list" default="" label="Layout Style" description="Determines the size and amount of social context next to the button.">
					<option value="standard">standard</option>
					<option value="button_count">button_count</option>
					<option value="box_count">box_count</option>
				</field>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="show_faces" type="radio" default="1" label="Show Faces" description="Show profile picture below the button.">
					<option value="1">Show</option>
					<option value="0">Hide</option>
				</field>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="width" type="text" default="450" label="Module Width" description="The width of facebook like plugin in pixels"/>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="verb_to_display" type="list" default="like" label="Verb to display" description="The verb to display in the button. Currently only 'like' and 'recommend' are supported.">
					<option value="like">like</option>
					<option value="recommend">recommend</option>			
				</field>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="font" type="list" default="" label="Font" description="the font of the plugin">
					<option value=""></option>		
					<option value="arial">arial</option>
					<option value="lucida grande">lucida grande</option>
					<option value="segoe ui">segoe ui</option>	
					<option value="tahoma">tahoma</option>
					<option value="trebuchet ms">trebuchet ms</option>
					<option value="verdana">verdana</option>
				</field>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="color_scheme" type="list" default="light" label="Color Scheme" description="The color scheme of the plugin.">
					<option value="light">light</option>
					<option value="dark">dark</option>
				</field>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="language" type="text" default="en_GB" label="Language" description="eg:fr_FR for french etc."/>
				<field name="spearheadspacer" type="spacer" default="" label="" description="" />
				<field name="height" type="text" default="80" label="Height" description="Height of module and iframe."/>
		
			</fieldset>			
		</fields>
	</config>
</extension>
